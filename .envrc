# direnv configuration for Ralph Loop
# Install direnv: sudo dnf install direnv
# Allow with: direnv allow

# Ensure Wayland for GTK dialogs
export GDK_BACKEND=wayland

# Use native Wayland for Qt (if any Qt components)
export QT_QPA_PLATFORM=wayland

# Optimize for Alder Lake when building
export RUSTFLAGS="-C target-cpu=alderlake"

# Use all cores for compilation
export CARGO_BUILD_JOBS=16

# Node.js memory limit (64GB RAM available)
export NODE_OPTIONS="--max-old-space-size=8192"

# Tauri dev server port
export TAURI_DEV_HOST="localhost"
