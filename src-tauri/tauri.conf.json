{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ralph",
  "version": "0.1.0",
  "identifier": "com.vince.ralph",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "Ralph4days - Parallel task execution orchestration system",
      "args": [
        {
          "name": "project",
          "description": "Project directory path to lock for this session",
          "takesValue": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Development",
    "shortDescription": "Autonomous multi-agent build system",
    "longDescription": "Ralph4days orchestrates parallel task execution sequences over a PRD-backed task graph, including task-level Claude execution and review workflows.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      },
      "rpm": {
        "release": "1"
      }
    }
  }
}
